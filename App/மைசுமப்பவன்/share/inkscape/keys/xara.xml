  <bind gaction="win.dialog-open('Swatches')"           keys="F9, &lt;ctrl&gt;&lt;shift&gt;w, &lt;ctrl&gt;&lt;shift&gt;W" />
  <bind gaction="win.dialog-toggle"                     keys="F12" />
  <bind gaction="win.dialog-open('DocumentProperties')" />
